---
import Container from '@components/common/container.astro'

import documentationImg from '@assets/images/illustrations/documentation.png';
import blogImg from '@assets/images/illustrations/blog.png';
import communityImg from '@assets/images/illustrations/community.png';
import contributeImg from '@assets/images/illustrations/contribute.png';

const resources = [
  {
    id: 1,
    category: "Reference",
    categoryColor: "bg-purple-600",
    borderColor: "border-purple-300",
    title: "Documentation",
    description: "Learn new insight an inspiration on website and application design.",
    buttonText: "Explore the Guide",
    image: documentationImg
  },
  {
    id: 2,
    category: "Articles", 
    categoryColor: "bg-pink-500",
    borderColor: "border-pink-300",
    title: "Blog",
    description: "Learn new insight an inspiration on website and application design.",
    buttonText: "Get Insight",
    image: blogImg
  },
  {
    id: 3,
    category: "Forum",
    categoryColor: "bg-gray-700",
    borderColor: "border-gray-400", 
    title: "Community",
    description: "Learn new insight an inspiration on website and application design.",
    buttonText: "Join Community",
    image: communityImg
  },
  {
    id: 4,
    category: "Help Out",
    categoryColor: "bg-blue-600",
    borderColor: "border-blue-300",
    title: "Contribute", 
    description: "Learn new insight an inspiration on website and application design.",
    buttonText: "Get Insight",
    image: contributeImg
  }
]
---

<section class="showcase-section bg-color-surface text-color-default py-16 lg:py-24">
  <Container>
  

    <div class="mb-12 text-center">
     
      <plus-chip kind="filled" shape="full" class="mb-5 block">Resources</plus-chip>

      <h2 class="mb-2.5 text-3xl font-bold lg:text-4xl">
        UI Knowledge Hub
      </h2>
      <p class="mx-auto max-w-2xl text-lg text-color-caption">Explore expert-curated documentation, assets, <br />and UI strategies built for modern product teams.</p>
    </div>

    <!-- Resources Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-9 max-w-7xl mx-auto">
      {resources.map((resource) => (
        <div class={`relative bg-white rounded-lg border ${resource.borderColor} overflow-hidden flex flex-col`}>
          <!-- Cover Image -->
          <div class="h-[200px] bg-gray-100 overflow-hidden rounded-t-lg relative">
            <img 
              src={resource.image.src} 
              alt={resource.title}
              class="absolute inset-0 w-full h-full object-cover"
            />
          </div>
          
          <!-- Content -->
          <div class="p-4 flex flex-col gap-5 flex-grow">
            <!-- Category Chip -->
            <div class={`inline-flex items-center justify-center px-1.5 py-0.5 rounded-full max-w-fit ${resource.categoryColor}`}>
              <span class="text-white text-xs font-normal leading-4">{resource.category}</span>
            </div>
            
            <!-- Title & Description -->
            <div class="flex flex-col gap-2">
              <h3 class="text-2xl font-semibold text-color-default leading-8">
                {resource.title}
              </h3>
              <p class="text-base text-color-default leading-6">
                {resource.description}
              </p>
            </div>
            
            <!-- CTA Button -->
            <div class="mt-auto">
              <plus-button kind="filled" class="group">
                <div class="flex items-center justify-center gap-2.5">
                  {resource.buttonText}
                  <div class="group-hover:translate-x-0.5 transition-transform duration-200">
                    <i class="fa-solid fa-arrow-right"></i>
                  </div>
                </div>
              </plus-button>
            </div>
          </div>
        </div>
      ))}
    </div>
  </Container>
</section>
