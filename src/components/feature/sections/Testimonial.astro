---

<section class="bg-color-surface py-16 lg:py-24">
  <Container>
    <!-- Header Section -->
    <div class="mb-12 text-center">
      <!-- Avatar Stack and Trust Indicator -->
      <div class="mb-4 flex items-center justify-center">
        <div class="flex items-center gap-2.5">
          <!-- Avatar Stack -->
          <div class="flex items-center pr-2.5">
            {avatarImages.map((avatar, index) => (
              <div 
                class={`relative h-8 w-8 rounded-full border border-gray-400 bg-cover bg-center ${index > 0 ? '-ml-2.5' : ''}`}
                style={`background-image: url(${avatar})`}
              />
            ))}
          </div>
          <!-- Trust Text -->
          <div>
            <p class="text-base font-medium text-color-caption">Trusted by 10,000+ users</p>
          </div>
        </div>
      </div>

      <h2 class="mb-2.5 text-3xl font-bold lg:text-4xl">
        What People Are Saying
      </h2>
      <p class="mx-auto max-w-2xl text-lg text-color-caption">Designers, developers, and product owners rely <br />on Plus UI to move faster and stay consistent.</p>
  
    </div>

    <!-- Testimonials Grid -->
    <div class="mb-14 px-14 py-16 flex flex-col items-center gap-14">
      <div class="mx-auto grid w-full grid-cols-1 gap-14 md:grid-cols-2 lg:grid-cols-3">
        {testimonials.map((testimonial) => (
          <div class="flex w-full flex-col items-center gap-8 overflow-hidden rounded">
            <!-- Rating Stars -->
            <div class="flex items-center justify-center">
              <div class="flex gap-0">
                {Array.from({ length: testimonial.rating }, (_, i) => (
                  <div class="flex h-5 w-5 items-center justify-center">
                    <svg class="h-5 w-5 text-color-loading" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  </div>
                ))}
              </div>
            </div>

            <!-- Content -->
            <div class="flex w-full flex-col gap-2.5 text-center">
              <div class="text-lg font-semibold text-color-loding lg:text-xl">
                {testimonial.title}
              </div>
              <div class="text-lg font-medium text-color-caption">
                "{testimonial.content}"
              </div>
            </div>

            <!-- User Info -->
            <div class="flex w-full flex-col items-center gap-3.5">
              <!-- Avatar -->
              <div 
                class="h-[4.375rem] w-[4.375rem] rounded-full bg-cover bg-center"
                style={`background-image: url(${testimonial.avatar})`}
              />
              
              <!-- User Details -->
              <div class="flex w-full flex-col items-center gap-1">
                <div class="w-full text-center">
                  <p class="text-lg font-medium text-color-loading">{testimonial.author}</p>
                </div>
                <div class="w-full text-center">
                  <p class="text-sm font-normal text-color-caption">{testimonial.position}</p>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Navigation Buttons -->
      <div class="flex w-full items-center justify-center gap-7">
        <button class="flex h-[60px] w-[60px] items-center justify-center rounded-full bg-color-default-default p-2.5 hover:bg-color-default-hovered focus:bg-color-default-focused cursor-pointer">
          <div class="flex h-5 w-5 items-center justify-center">
            <i class="fa-solid fa-chevron-left"></i>
          </div>
        </button>
        
        <button class="flex h-[60px] w-[60px] items-center justify-center rounded-full bg-color-default-default p-2.5 hover:bg-color-default-hovered focus:bg-color-default-focused cursor-pointer">
          <div class="flex h-5 w-5 items-center justify-center">
            <i class="fa-solid fa-chevron-right"></i>
          </div>
        </button>
      </div>
    </div>

  </Container>
</section>
