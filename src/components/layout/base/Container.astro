---
export interface Props {
  class?: string
  size?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | 'full'
  padding?: 'none' | 'sm' | 'md' | 'lg'
}

const { class: className = '', size = 'xl', padding = 'md' } = Astro.props

const sizeClasses = {
  sm: 'max-w-[--breakpoint-sm]',
  md: 'max-w-[--breakpoint-md]',
  lg: 'max-w-[calc(var(--breakpoint-lg)+40px)]',
  xl: 'max-w-[calc(var(--breakpoint-xl)+40px)]',
  '2xl': 'max-w-[calc(var(--breakpoint-2xl)+40px)]',
  full: 'max-w-full',
}

const paddingClasses = {
  none: '',
  sm: 'px-4',
  md: 'px-4 lg:px-6',
  lg: 'px-4 lg:px-8',
}
---

<div class:list={['mx-auto w-full', sizeClasses[size], paddingClasses[padding], className]}>
  <slot />
</div>
