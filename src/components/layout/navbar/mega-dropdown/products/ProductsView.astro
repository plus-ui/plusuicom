---
const { items } = Astro.props;

import ProductCard from "./ProductCard.astro";
import designSystem from "@assets/images/icons/design-system.png";
import uiLibrary from "@assets/images/icons/ui-library.png";
import analytics from "@assets/images/icons/analytics.png";
import plusAi from "@assets/images/icons/plus-ai.png";

const images = {
  designSystem: designSystem.src,
  uiLibrary: uiLibrary.src,
  analytics: analytics.src,
  plusAi: plusAi.src,
};

const getImage = (image) => {
  return images[image];
};
---

<div class="flex flex-col lg:flex-row xl:gap-6 gap-1 text-pretty">
  {
    items.map((item, index) => (
      <>
        <ProductCard item={item} />
        {index < items.length - 1 && (
          <div class="hidden lg:block w-px bg-color-disabled-default" />
        )}
      </>
    ))
  }
</div>

<style>
  .product-card {
    &:hover {
      .product-card-image {
        transform: scale(1.2);
      }
    }
  }
</style>
