---
const { section } = Astro.props
---

<div class="flex flex-col gap-6">
  <h3 class="text-color-placeholder text-sm font-medium">{section.title}</h3>
  <ul class="flex flex-col gap-4">
    {
      section.items.map((item) => (
        <li>
          <a href={item.path} class="text-color-default hover:text-color-primary text-base font-medium transition-colors">
            {item.title}
          </a>
        </li>
      ))
    }
  </ul>
  <a href={section.seeAllPath} class="text-color-placeholder mt-2 text-sm font-medium hover:underline">{section.seeAllText} &rarr;</a>
</div>
