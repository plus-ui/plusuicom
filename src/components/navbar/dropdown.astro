---
import { Dropdown as NavDropdown, DropdownItems } from 'astro-navbar'
const { title, lastItem, children } = Astro.props
---

<li class="relative isolate z-50">
  <NavDropdown class="group">
    <button
      class="font-sans-tight text-color-default focus-visible:shadow-outline-indigo flex w-full cursor-pointer items-center gap-1.5 rounded-full px-3 py-1.5 text-base font-normal tracking-[0.01em] transition hover:text-indigo-600 focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2 focus-visible:outline-none lg:w-auto"
    >
      <span>{title}</span>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor" class="mt-0.5 h-3 w-3 transition-transform duration-200 group-open:rotate-180">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg>
    </button>
    <DropdownItems>
      <div class:list={['z-50 w-full border-l border-slate-200 lg:absolute lg:w-48 lg:border-0', lastItem ? 'origin-top-right lg:right-0' : 'origin-top-left lg:left-0']}>
        <div class="flex flex-col px-3 lg:rounded-md lg:border lg:bg-white lg:py-2 lg:shadow">
          {
            children.map((item) => (
              <a
                href={item.path}
                class="focus-visible:shadow-outline-indigo rounded py-1 text-sm font-medium text-gray-600 hover:text-indigo-600 focus-visible:ring-2 focus-visible:ring-indigo-500 focus-visible:ring-offset-2 focus-visible:outline-none"
              >
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </NavDropdown>
</li>
