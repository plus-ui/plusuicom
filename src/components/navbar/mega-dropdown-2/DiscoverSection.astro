---
const { section } = Astro.props;
---

<div class="space-y-4">
  <h4 class="text-sm font-medium text-gray-500 uppercase tracking-wider">
    {section.title}
  </h4>
  
  {section.type === "links" && (
    <div class="space-y-3">
      {section.items.map((item) => (
        <a href={item.path} class="block group">
          <div class="flex items-center gap-2">
            {item.icon && (
              <i class={`${item.icon} w-4 h-4 text-gray-400`}></i>
            )}
            <span class="text-sm text-gray-700 group-hover:text-indigo-600 transition-colors">
              {item.title}
            </span>
            {item.badge && (
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                {item.badge}
              </span>
            )}
          </div>
        </a>
      ))}
    </div>
  )}
  
  {section.type === "compare" && (
    <div class="space-y-3">
      {section.items.map((item) => (
        <a href={item.path} class="block text-sm text-gray-700 hover:text-indigo-600 transition-colors">
          {item.title}
        </a>
      ))}
      <a href={section.seeAllPath} class="inline-flex items-center gap-1 text-sm text-indigo-600 hover:text-indigo-700 transition-colors">
        <span>{section.seeAllText}</span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3 h-3">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>
  )}
  
  {section.type === "featured" && (
    <div class="bg-gradient-to-r from-orange-300 to-orange-400 rounded-xl p-4 relative">
      {section.image && (
        <div class="mb-3">
          <div class="w-full h-16 bg-orange-200 rounded-lg"></div>
        </div>
      )}
      <h5 class="text-sm font-semibold text-gray-900 mb-3">
        {section.featuredTitle}
      </h5>
      <a href={section.path} class="inline-flex items-center gap-1 text-sm text-gray-700 hover:text-gray-900 transition-colors">
        <span>{section.cta}</span>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3 h-3">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>
  )}
</div> 