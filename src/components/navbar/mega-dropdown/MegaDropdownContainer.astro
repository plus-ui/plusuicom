---
import { Dropdown as NavDropdown, DropdownItems } from "astro-navbar";
import ProductsView from "./products/ProductsView.astro";
import DiscoverView from "./discover/DiscoverView.astro";

const { title, type, children } = Astro.props;
---

<li class="relative z-50 isolate">
  <NavDropdown class="group">
    <button
      class="flex lg:px-3 py-1.5 font-sans-tight text-base font-normal tracking-[0.01em] items-center gap-1.5 w-full lg:w-auto transition text-color-default hover:bg-color-default-hovered group-open:bg-color-default-hovered focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-500 focus-visible:outline-none focus-visible:shadow-outline-indigo rounded cursor-pointer"
    >
      <span>{title}</span>
      <!-- <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="w-3 h-3 mt-0.5 group-open:rotate-180 transition-transform duration-200"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg> -->
      <i class="fa-solid fa-chevron-down transition-transform duration-200 group-open:rotate-180 text-sm"></i>
    </button>
    <DropdownItems>
      <div
        class="hidden lg:block lg:fixed w-full z-50 border-l lg:bg-color-surface lg:left-1/2 lg:transform lg:-translate-x-1/2 lg:border-l-0 lg:border-t lg:border-b border-t-color-disabled border-b-color-disabled lg:top-full lg:p-6"
        transition:persist
      >
        <div
          class="px-3 flex flex-col mx-auto"
          style="width: min(calc(80rem + 40px), 90vw);"
        >
          {type === "products" && <ProductsView items={children} />}
          {type === "discover" && <DiscoverView items={children} />}
        </div>
      </div>
      <div class="lg:hidden border-l border-color-disabled">
        <div class="px-3 flex flex-col">
          {
            children.map((item) => (
              <a
                href={item.path}
                class="py-1 text-sm text-gray-600 hover:text-indigo-600 focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-500 focus-visible:outline-none focus-visible:shadow-outline-indigo rounded"
              >
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </NavDropdown>
</li>
