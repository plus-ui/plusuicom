<StickyHeader
  data-theme={headerTheme}
  class="sticky top-0 z-20 border-b transition-all"
  scrollY={50}
  defaultClass="py-5 border-transparent"
  activeClass="py-2 bg-color-surface/90 border-color-disabled backdrop-blur-lg"
  transition:persist
>
