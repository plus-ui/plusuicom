---
import Container from "@components/container.astro";
---

<section class="features-section py-16 lg:py-24 bg-gray-50">
  <Container>
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-5xl font-bold mb-6">
        Features
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Powerful features designed to enhance your development experience.
      </p>
    </div>
    
    <!-- Vertical Tabs Structure -->
    <div class="grid lg:grid-cols-3 gap-8">
      <!-- Tab Navigation (Vertical) -->
      <div class="lg:col-span-1">
        <div class="space-y-2">
          <button class="w-full text-left p-4 rounded-lg bg-white shadow-sm border-l-4 border-blue-600 font-medium">
            Feature 1
          </button>
          <button class="w-full text-left p-4 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
            Feature 2
          </button>
          <button class="w-full text-left p-4 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
            Feature 3
          </button>
          <button class="w-full text-left p-4 rounded-lg text-gray-600 hover:bg-gray-50 transition-colors">
            Feature 4
          </button>
        </div>
      </div>
      
      <!-- Tab Content -->
      <div class="lg:col-span-2">
        <div class="bg-white p-8 rounded-xl shadow-sm">
          <h3 class="text-2xl font-bold mb-4">Feature Title</h3>
          <p class="text-gray-600 mb-6">
            Detailed description of the selected feature will be displayed here.
          </p>
          <div class="bg-gray-100 h-48 rounded-lg flex items-center justify-center">
            <span class="text-gray-500">Feature visualization</span>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
