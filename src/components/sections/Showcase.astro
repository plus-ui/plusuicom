---
import Container from '@components/container.astro'
import ShowcaseTabs from '@components/ui/ShowcaseTabs.tsx'
---

<section class="showcase-section bg-color-surface text-color-default py-16 lg:py-24" data-theme="dark">
  <Container>
    <div class="mb-12 text-center">
     
      <plus-chip kind="filled" shape="rounded" size="lg" class="mb-5">Showcase</plus-chip>

      <h2 class="mb-2.5 text-3xl font-bold lg:text-4xl">
        Build Smarter<br />
        with Modular UI Foundations
      </h2>
      <p class="mx-auto max-w-2xl text-lg text-color-caption">Modular components, tokens, templates, and real-time monitoring</p>
    </div>

    {/* Interactive Tabs */}
    <ShowcaseTabs client:load />
  </Container>
</section>
