---
import Container from "@components/container.astro";
---

<section class="templates-section py-16 lg:py-24 bg-gray-50">
  <Container>
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-5xl font-bold mb-6">
        Templates
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Pre-built templates to kickstart your projects with our component library.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Template Cards -->
      <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="h-48 bg-gradient-to-br from-blue-100 to-blue-200"></div>
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2">Dashboard Template</h3>
          <p class="text-gray-600 mb-4">
            Complete dashboard layout with charts, tables, and navigation.
          </p>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-500">React, Vue, Angular</span>
            <button class="text-blue-600 font-medium hover:underline">
              Preview →
            </button>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="h-48 bg-gradient-to-br from-green-100 to-green-200"></div>
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2">Landing Page</h3>
          <p class="text-gray-600 mb-4">
            Modern landing page template with hero and feature sections.
          </p>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-500">React, Vue, Angular</span>
            <button class="text-blue-600 font-medium hover:underline">
              Preview →
            </button>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="h-48 bg-gradient-to-br from-purple-100 to-purple-200"></div>
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2">E-commerce</h3>
          <p class="text-gray-600 mb-4">
            Complete e-commerce template with product listings and cart.
          </p>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-500">React, Vue, Angular</span>
            <button class="text-blue-600 font-medium hover:underline">
              Preview →
            </button>
          </div>
        </div>
      </div>
    </div>
    
    <div class="text-center mt-12">
      <button class="bg-blue-600 text-white px-8 py-3 rounded-lg font-medium hover:bg-blue-700 transition-colors">
        View All Templates
      </button>
    </div>
  </Container>
</section>
