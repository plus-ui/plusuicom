---
import { Section, SectionHead } from '@components/layout'
import { Accordion } from '@components/sections/faq/components'

const { items } = Astro.props
---

<Section>
  <slot />

  <!-- Accordion Section -->
  <div class="lg:px-32">
    <Accordion items={items} allowMultiple={false} client:load />
  </div>

  <!-- CTA Section -->
  <div class="flex flex-col items-center justify-center gap-2.5 mt-12">
    <plus-button kind="filled" class="group">
      <div class="flex items-center justify-center gap-2.5">
        <span class="text-lg leading-7 font-medium text-gray-950">See more questions</span>
        <div class="text-gray-950 transition-transform duration-200 group-hover:translate-x-0.5">
          <i class="fa-solid fa-arrow-right"></i>
        </div>
      </div>
    </plus-button>
  </div>
</Section>
