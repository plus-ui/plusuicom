---
import { Section, SectionHead } from '@components/layout'
import { ScrollBasedFeatures } from '../components'

import unifiedStyling from '@assets/images/features/unified-styling.png'
import crossFramework from '@assets/images/features/cross-framework.png'
import uiMonitoring from '@assets/images/features/ui-monitoring.png'

const featuresData = [
  {
    id: 'unified-styling',
    icon: 'fa-solid fa-bolt',
    title: 'Unified Styling, Centralized Control',
    description:
      "Standardize your product's visual language with a centralized token system. Distribute a unified set of variables—colors, spacing, typography—across design and code to eliminate inconsistencies, accelerate delivery, and enforce brand integrity at scale.",
    logos: ['react', 'angular-icon', 'vue'],
    visualType: 'image' as const,
    visualContent: unifiedStyling.src,
  },
  {
    id: 'cross-framework',
    icon: 'fa-solid fa-code-branch',
    title: 'Cross-Framework Support',
    description:
      'Implement your design system across multiple front-end stacks with zero friction. We provide native support for React, Angular, Vue, and more—ensuring consistency no matter what frameworks your teams use.',
    logos: ['react', 'angular-icon', 'vue'],
    visualType: 'image' as const,
    visualContent: crossFramework.src,
  },
  {
    id: 'ui-monitoring',
    icon: 'fa-solid fa-chart-line',
    title: 'UI Monitoring & Analytics',
    description:
      'Track how tokens and components are used across teams, products, and codebases. Identify deviations, measure adoption, and enforce design standards with actionable insights that drive system-wide alignment.',
    logos: ['react', 'angular-icon', 'vue'],
    visualType: 'image' as const,
    visualContent: uiMonitoring.src,
  },
]
---

<Section>
  <SectionHead>
    <Fragment slot="badge"> <plus-chip kind="filled" shape="full">Features</plus-chip> </Fragment>
    <Fragment slot="title">
      Everything You Need<br />
      to Design, Build, and Deliver
    </Fragment>
    <Fragment slot="desc"> A robust design system built for speed, consistency, and enterprise-grade governance </Fragment>
  </SectionHead>

  <ScrollBasedFeatures features={featuresData} client:load />
</Section>
