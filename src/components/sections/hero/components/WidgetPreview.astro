import { Image } from 'astro:assets'
---

<div class="relative w-full overflow-hidden">
  {/* Hidden reference layout - determines sizes */}
  <div class="pointer-events-none opacity-0">
    <div class="mb-4 flex w-full flex-col gap-4 sm:flex-row">
      <div class="flex-1">
        <Image 
          src={widgetd1x1} 
          alt="UI Component Widget Preview - Dashboard Card" 
          class="h-auto w-full object-contain" 
          loading="lazy" 
          decoding="async"
          fetchpriority="low"
        />
      </div>
      <div class="flex-1">
        <Image 
          src={widgetd1x2} 
          alt="UI Component Widget Preview - Analytics Chart" 
          class="h-auto w-full object-contain" 
          loading="lazy" 
          decoding="async"
          fetchpriority="low"
        />
      </div>
    </div>
    <div class="w-full">
      <Image 
        src={widgetd1x3} 
        alt="UI Component Widget Preview - Full Width Dashboard Layout" 
        class="h-auto w-full object-contain" 
        loading="lazy" 
        decoding="async"
        fetchpriority="low"
      />
    </div>
  </div>
  {/* Animated Widgets */}
  <div class="absolute inset-0 flex flex-col">
    <div class="mb-4 flex w-full flex-col gap-4 sm:flex-row">
      <div class="flex-1">
        <Image 
          src={widgetd1x1} 
          alt="UI Component Widget Preview - Dashboard Card" 
          class="h-auto w-full object-contain" 
          loading="eager" 
          decoding="async"
          fetchpriority="high"
          width={608}
          height={376}
        />
      </div>
      <div class="flex-1">
        <Image 
          src={widgetd1x2} 
          alt="UI Component Widget Preview - Analytics Chart" 
          class="h-auto w-full object-contain" 
          loading="eager" 
          decoding="async"
          fetchpriority="high"
          width={608}
          height={376}
        />
      </div>
    </div>
    <div class="w-full">
      <Image 
        src={widgetd1x3} 
        alt="UI Component Widget Preview - Full Width Dashboard Layout" 
        class="h-auto w-full object-contain" 
        loading="eager" 
        decoding="async"
        fetchpriority="high"
        width={1216}
        height={376}
      />
    </div>
  </div>
</div>
