---
import { Section } from '@components/layout'
import { Image } from 'astro:assets'
// import templatesImg from '@assets/images/illustrations/templates.png'

import template1Img from '@assets/images/templates/template1.png'
import template2Img from '@assets/images/templates/template2.png'
import template3Img from '@assets/images/templates/template3.png'
import template4Img from '@assets/images/templates/template4.png'
const templates = [template1Img, template2Img, template3Img, template4Img]
---

<Section dark size="full">
  <div class="relative flex flex-row flex-nowrap items-center justify-center gap-3 overflow-hidden sm:gap-5">
    <div class="pointer-events-none absolute top-0 left-0 z-10 h-full w-16 bg-gradient-to-r from-[var(--background-color-color-surface)] to-transparent"></div>

    <div class="pointer-events-none absolute top-0 right-0 z-10 h-full w-16 bg-gradient-to-l from-[var(--background-color-color-surface)] to-transparent"></div>

    {templates.map((template) => <Image src={template} alt="Template" class="h-[200px] w-auto object-contain sm:h-[300px]" loading="lazy" decoding="async" fetchpriority="low" />)}
  </div>
</Section>
