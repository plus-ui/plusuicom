---
import DashboardLayout from "@layouts/DashboardLayout.astro";

// Mock bookmarks data
const bookmarks = [
  {
    id: 1,
    title: 'Plus UI Design System',
    description: 'Complete design system with components, patterns, and guidelines',
    category: 'Design System',
    date: '2024-02-15',
    url: '#',
    image: '/src/assets/design-system.png'
  },
  {
    id: 2,
    title: 'Dashboard Templates',
    description: 'Collection of professional dashboard layouts and components',
    category: 'Templates',
    date: '2024-02-10',
    url: '#',
    image: '/src/assets/templates.png'
  },
  {
    id: 3,
    title: 'Icon Pack Pro',
    description: 'Premium icon collection with 1000+ scalable vector icons',
    category: 'Assets',
    date: '2024-02-05',
    url: '#',
    image: '/src/assets/iconify.png'
  },
  {
    id: 4,
    title: 'Component Library',
    description: 'Reusable UI components built with modern frameworks',
    category: 'Components',
    date: '2024-01-28',
    url: '#',
    image: '/src/assets/components.png'
  }
];

const categories = ['All', 'Design System', 'Templates', 'Assets', 'Components', 'Documentation'];
---

<DashboardLayout 
  title="Bookmarks - Plus UI" 
  currentView="bookmark"
  headerTitle="Bookmarks"
  headerDescription="Your saved items and favorite resources"
  showSignOut={false}
>
  <!-- Main Content -->
  <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <!-- Stats -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-3 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
                <i class="fas fa-bookmark text-white text-sm"></i>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Bookmarks</dt>
                <dd class="text-lg font-medium text-gray-900">{bookmarks.length}</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
                <i class="fas fa-folder text-white text-sm"></i>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Categories</dt>
                <dd class="text-lg font-medium text-gray-900">{categories.length - 1}</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
                <i class="fas fa-clock text-white text-sm"></i>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Last Added</dt>
                <dd class="text-lg font-medium text-gray-900">2 days ago</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Filters</h3>
        <p class="text-sm text-gray-500">Organize your bookmarks by category</p>
      </div>

      <div class="px-6 py-4">
        <div class="flex flex-wrap gap-2">
          {categories.map((category) => (
            <button class={`px-4 py-2 rounded-full text-sm font-medium transition-colors duration-200 ${
              category === 'All' 
                ? 'bg-indigo-600 text-white' 
                : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
            }`}>
              {category}
            </button>
          ))}
        </div>
      </div>
    </div>

    <!-- Bookmarks Grid -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Your Bookmarks</h3>
        <p class="text-sm text-gray-500">All your saved items and resources</p>
      </div>

      <div class="px-6 py-6">
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {bookmarks.map((bookmark) => (
            <div class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-200">
              <div class="h-48 bg-gray-100 flex items-center justify-center">
                <i class="fas fa-image text-gray-400 text-4xl"></i>
              </div>
              
              <div class="p-4">
                <div class="flex items-center justify-between mb-2">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                    {bookmark.category}
                  </span>
                  <span class="text-xs text-gray-500">{bookmark.date}</span>
                </div>
                
                <h4 class="text-lg font-semibold text-gray-900 mb-2">{bookmark.title}</h4>
                <p class="text-sm text-gray-600 mb-4">{bookmark.description}</p>
                
                <div class="flex items-center justify-between">
                  <a href={bookmark.url} class="text-indigo-600 hover:text-indigo-700 text-sm font-medium">
                    View Resource
                  </a>
                  <div class="flex items-center space-x-2">
                    <button class="text-gray-400 hover:text-red-500 transition-colors duration-200">
                      <i class="fas fa-heart"></i>
                    </button>
                    <button class="text-gray-400 hover:text-gray-600 transition-colors duration-200">
                      <i class="fas fa-share"></i>
                    </button>
                    <button class="text-gray-400 hover:text-gray-600 transition-colors duration-200">
                      <i class="fas fa-ellipsis-v"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-8 bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Quick Actions</h3>
        <p class="text-sm text-gray-500">Manage your bookmarks efficiently</p>
      </div>

      <div class="px-6 py-6">
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
          <button class="flex items-center p-4 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200">
            <div class="w-10 h-10 bg-blue-500 rounded-lg flex items-center justify-center mr-3">
              <i class="fas fa-plus text-white"></i>
            </div>
            <div class="text-left">
              <h4 class="text-sm font-medium text-gray-900">Add Bookmark</h4>
              <p class="text-xs text-gray-500">Save new resources</p>
            </div>
          </button>

          <button class="flex items-center p-4 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200">
            <div class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center mr-3">
              <i class="fas fa-folder-plus text-white"></i>
            </div>
            <div class="text-left">
              <h4 class="text-sm font-medium text-gray-900">Create Collection</h4>
              <p class="text-xs text-gray-500">Organize bookmarks</p>
            </div>
          </button>

          <button class="flex items-center p-4 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200">
            <div class="w-10 h-10 bg-purple-500 rounded-lg flex items-center justify-center mr-3">
              <i class="fas fa-export text-white"></i>
            </div>
            <div class="text-left">
              <h4 class="text-sm font-medium text-gray-900">Export Bookmarks</h4>
              <p class="text-xs text-gray-500">Backup your data</p>
            </div>
          </button>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>
