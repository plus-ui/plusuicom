---
import DashboardLayout from "@layouts/DashboardLayout.astro";

// Mock collections data
const collections = [
  {
    id: 1,
    name: 'Design System',
    description: 'Core design system components and guidelines',
    itemCount: 24,
    lastUpdated: '2024-02-15',
    color: 'blue',
    icon: 'fas fa-palette'
  },
  {
    id: 2,
    name: 'Dashboard Templates',
    description: 'Professional dashboard layouts for various industries',
    itemCount: 18,
    lastUpdated: '2024-02-10',
    color: 'green',
    icon: 'fas fa-chart-line'
  },
  {
    id: 3,
    name: 'UI Components',
    description: 'Reusable UI components and patterns',
    itemCount: 32,
    lastUpdated: '2024-02-05',
    color: 'purple',
    icon: 'fas fa-cube'
  },
  {
    id: 4,
    name: 'Icon Collections',
    description: 'Premium icon packs and collections',
    itemCount: 15,
    lastUpdated: '2024-01-28',
    color: 'yellow',
    icon: 'fas fa-icons'
  },
  {
    id: 5,
    name: 'Color Palettes',
    description: 'Curated color schemes and palettes',
    itemCount: 12,
    lastUpdated: '2024-01-20',
    color: 'pink',
    icon: 'fas fa-swatchbook'
  },
  {
    id: 6,
    name: 'Typography',
    description: 'Font families and typography systems',
    itemCount: 8,
    lastUpdated: '2024-01-15',
    color: 'indigo',
    icon: 'fas fa-font'
  }
];

const colorClasses = {
  blue: 'bg-blue-500',
  green: 'bg-green-500',
  purple: 'bg-purple-500',
  yellow: 'bg-yellow-500',
  pink: 'bg-pink-500',
  indigo: 'bg-indigo-500'
};
---

<DashboardLayout 
  title="Collections - Plus UI" 
  currentView="collections"
  headerTitle="Collections"
  headerDescription="Organize and manage your design resources"
  showSignOut={false}
>
  <!-- Main Content -->
  <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <!-- Stats -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-3 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
                <i class="fas fa-folder text-white text-sm"></i>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Collections</dt>
                <dd class="text-lg font-medium text-gray-900">{collections.length}</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
                <i class="fas fa-layer-group text-white text-sm"></i>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Items</dt>
                <dd class="text-lg font-medium text-gray-900">{collections.reduce((sum, col) => sum + col.itemCount, 0)}</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
                <i class="fas fa-clock text-white text-sm"></i>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Last Updated</dt>
                <dd class="text-lg font-medium text-gray-900">2 days ago</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Collections Grid -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-medium text-gray-900">Your Collections</h3>
            <p class="text-sm text-gray-500">Organize your design resources into collections</p>
          </div>
          <button class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            <i class="fas fa-plus mr-2"></i>
            New Collection
          </button>
        </div>
      </div>

      <div class="px-6 py-6">
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {collections.map((collection) => (
            <div class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-200">
              <div class={`h-32 ${colorClasses[collection.color]} flex items-center justify-center`}>
                <i class={`${collection.icon} text-white text-3xl`}></i>
              </div>
              
              <div class="p-4">
                <div class="flex items-center justify-between mb-2">
                  <h4 class="text-lg font-semibold text-gray-900">{collection.name}</h4>
                  <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                    {collection.itemCount} items
                  </span>
                </div>
                
                <p class="text-sm text-gray-600 mb-4">{collection.description}</p>
                
                <div class="flex items-center justify-between text-xs text-gray-500 mb-4">
                  <span>Updated {collection.lastUpdated}</span>
                  <span>#{collection.id}</span>
                </div>
                
                <div class="flex items-center justify-between">
                  <button class="text-indigo-600 hover:text-indigo-700 text-sm font-medium">
                    View Collection
                  </button>
                  <div class="flex items-center space-x-2">
                    <button class="text-gray-400 hover:text-gray-600 transition-colors duration-200">
                      <i class="fas fa-edit"></i>
                    </button>
                    <button class="text-gray-400 hover:text-gray-600 transition-colors duration-200">
                      <i class="fas fa-share"></i>
                    </button>
                    <button class="text-gray-400 hover:text-red-500 transition-colors duration-200">
                      <i class="fas fa-trash"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-8 bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Quick Actions</h3>
        <p class="text-sm text-gray-500">Manage your collections efficiently</p>
      </div>

      <div class="px-6 py-6">
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
          <button class="flex items-center p-4 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200">
            <div class="w-10 h-10 bg-blue-500 rounded-lg flex items-center justify-center mr-3">
              <i class="fas fa-plus text-white"></i>
            </div>
            <div class="text-left">
              <h4 class="text-sm font-medium text-gray-900">Create Collection</h4>
              <p class="text-xs text-gray-500">Start a new collection</p>
            </div>
          </button>

          <button class="flex items-center p-4 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200">
            <div class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center mr-3">
              <i class="fas fa-upload text-white"></i>
            </div>
            <div class="text-left">
              <h4 class="text-sm font-medium text-gray-900">Import Collection</h4>
              <p class="text-xs text-gray-500">Import from file</p>
            </div>
          </button>

          <button class="flex items-center p-4 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200">
            <div class="w-10 h-10 bg-purple-500 rounded-lg flex items-center justify-center mr-3">
              <i class="fas fa-export text-white"></i>
            </div>
            <div class="text-left">
              <h4 class="text-sm font-medium text-gray-900">Export All</h4>
              <p class="text-xs text-gray-500">Backup collections</p>
            </div>
          </button>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>
