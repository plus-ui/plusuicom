---
import DashboardLayout from "@layouts/DashboardLayout.astro";

// Mock downloads data
const downloads = [
  {
    id: 1,
    name: 'Plus UI Design System',
    type: 'Design System',
    size: '2.4 GB',
    date: '2024-02-15',
    status: 'Completed'
  },
  {
    id: 2,
    name: 'Component Library v2.1',
    type: 'UI Library',
    size: '1.8 GB',
    date: '2024-02-10',
    status: 'Completed'
  },
  {
    id: 3,
    name: 'Icon Pack Pro',
    type: 'Assets',
    size: '456 MB',
    date: '2024-02-05',
    status: 'Completed'
  },
  {
    id: 4,
    name: 'Templates Collection',
    type: 'Templates',
    size: '3.2 GB',
    date: '2024-01-28',
    status: 'Completed'
  }
];
---

<DashboardLayout 
  title="Downloads - Plus UI" 
  currentView="downloads"
  headerTitle="Downloads"
  headerDescription="Access your purchased content and downloads"
  showSignOut={false}
>
  <!-- Main Content -->
  <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <!-- Stats -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-3 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
                <i class="fas fa-download text-white text-sm"></i>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Downloads</dt>
                <dd class="text-lg font-medium text-gray-900">{downloads.length}</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
                <i class="fas fa-hdd text-white text-sm"></i>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Size</dt>
                <dd class="text-lg font-medium text-gray-900">7.9 GB</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
                <i class="fas fa-clock text-white text-sm"></i>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Last Download</dt>
                <dd class="text-lg font-medium text-gray-900">2 days ago</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Downloads List -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Your Downloads</h3>
        <p class="text-sm text-gray-500">All your purchased content and downloads</p>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Name
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Type
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Size
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Date
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Status
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {downloads.map((item) => (
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <div class="h-10 w-10 rounded-lg bg-indigo-600 flex items-center justify-center">
                        <i class="fas fa-download text-white"></i>
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">{item.name}</div>
                      <div class="text-sm text-gray-500">Download #{item.id}</div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                    {item.type}
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{item.size}</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{item.date}</td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                    {item.status}
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <div class="flex items-center space-x-2">
                    <button class="text-indigo-600 hover:text-indigo-900">
                      <i class="fas fa-download mr-1"></i>Download
                    </button>
                    <button class="text-gray-600 hover:text-gray-900">
                      <i class="fas fa-eye mr-1"></i>View
                    </button>
                  </div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-8 bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Quick Actions</h3>
        <p class="text-sm text-gray-500">Common actions for your downloads</p>
      </div>

      <div class="px-6 py-6">
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
          <button class="flex items-center p-4 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200">
            <div class="w-10 h-10 bg-blue-500 rounded-lg flex items-center justify-center mr-3">
              <i class="fas fa-sync text-white"></i>
            </div>
            <div class="text-left">
              <h4 class="text-sm font-medium text-gray-900">Check for Updates</h4>
              <p class="text-xs text-gray-500">Check for new versions</p>
            </div>
          </button>

          <button class="flex items-center p-4 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200">
            <div class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center mr-3">
              <i class="fas fa-folder-open text-white"></i>
            </div>
            <div class="text-left">
              <h4 class="text-sm font-medium text-gray-900">Open Downloads Folder</h4>
              <p class="text-xs text-gray-500">View local files</p>
            </div>
          </button>

          <button class="flex items-center p-4 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors duration-200">
            <div class="w-10 h-10 bg-purple-500 rounded-lg flex items-center justify-center mr-3">
              <i class="fas fa-history text-white"></i>
            </div>
            <div class="text-left">
              <h4 class="text-sm font-medium text-gray-900">Download History</h4>
              <p class="text-xs text-gray-500">View all downloads</p>
            </div>
          </button>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>
