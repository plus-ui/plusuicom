---
import DashboardLayout from "@layouts/DashboardLayout.astro";

// Mock subscription data
const currentPlan = {
  name: 'Pro Plan',
  price: '$29',
  period: 'month',
  status: 'Active',
  nextBilling: 'March 15, 2024',
  features: ['Unlimited projects', 'Advanced analytics', 'Priority support', 'Custom branding']
};

const availablePlans = [
  {
    name: 'Free',
    price: '$0',
    period: 'month',
    description: 'Perfect for getting started',
    features: ['3 projects', 'Basic analytics', 'Community support'],
    popular: false
  },
  {
    name: 'Pro',
    price: '$29',
    period: 'month',
    description: 'Best for growing teams',
    features: ['Unlimited projects', 'Advanced analytics', 'Priority support', 'Custom branding'],
    popular: true
  },
  {
    name: 'Enterprise',
    price: '$99',
    period: 'month',
    description: 'For large organizations',
    features: ['Everything in Pro', 'SSO integration', 'Dedicated support', 'Custom integrations'],
    popular: false
  }
];
---

<DashboardLayout 
  title="Plans & Billing - Plus UI" 
  currentView="plans"
  headerTitle="Plans & Billing"
  headerDescription="Manage your subscription and billing information"
  showSignOut={false}
>
  <!-- Main Content -->
  <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <!-- Current Plan -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Current Plan</h3>
        <p class="text-sm text-gray-500">Your active subscription details</p>
      </div>

      <div class="px-6 py-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-indigo-600 rounded-lg flex items-center justify-center">
              <i class="fas fa-crown text-white text-xl"></i>
            </div>
            <div>
              <h4 class="text-xl font-semibold text-gray-900">{currentPlan.name}</h4>
              <p class="text-sm text-gray-500">Next billing: {currentPlan.nextBilling}</p>
            </div>
          </div>
          <div class="text-right">
            <div class="text-3xl font-bold text-gray-900">{currentPlan.price}<span class="text-lg font-normal text-gray-500">/{currentPlan.period}</span></div>
            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
              {currentPlan.status}
            </span>
          </div>
        </div>

        <div class="mt-6">
          <h5 class="text-sm font-medium text-gray-900 mb-3">Plan Features:</h5>
          <div class="grid grid-cols-1 gap-2 md:grid-cols-2">
            {currentPlan.features.map((feature) => (
              <div class="flex items-center text-sm text-gray-600">
                <i class="fas fa-check text-green-500 mr-2"></i>
                {feature}
              </div>
            ))}
          </div>
        </div>

        <div class="mt-6 flex items-center space-x-3">
          <button class="rounded-lg border border-indigo-600 px-4 py-2 text-sm font-medium text-indigo-600 transition-colors duration-200 hover:border-indigo-700 hover:text-indigo-700">
            Change Plan
          </button>
          <button class="rounded-lg border border-gray-300 px-4 py-2 text-sm font-medium text-gray-600 transition-colors duration-200 hover:border-gray-400 hover:text-gray-700">
            Cancel Subscription
          </button>
        </div>
      </div>
    </div>

    <!-- Available Plans -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Available Plans</h3>
        <p class="text-sm text-gray-500">Choose the plan that best fits your needs</p>
      </div>

      <div class="px-6 py-6">
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {availablePlans.map((plan) => (
            <div class={`relative rounded-lg border-2 p-6 ${
              plan.popular 
                ? 'border-indigo-500 bg-indigo-50' 
                : 'border-gray-200 bg-white'
            }`}>
              {plan.popular && (
                <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
                  <span class="inline-flex px-3 py-1 text-xs font-semibold rounded-full bg-indigo-600 text-white">
                    Most Popular
                  </span>
                </div>
              )}

              <div class="text-center">
                <h4 class="text-lg font-semibold text-gray-900">{plan.name}</h4>
                <div class="mt-2">
                  <span class="text-3xl font-bold text-gray-900">{plan.price}</span>
                  <span class="text-gray-500">/{plan.period}</span>
                </div>
                <p class="mt-2 text-sm text-gray-500">{plan.description}</p>
              </div>

              <div class="mt-6">
                <ul class="space-y-3">
                  {plan.features.map((feature) => (
                    <li class="flex items-center text-sm text-gray-600">
                      <i class="fas fa-check text-green-500 mr-2"></i>
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>

              <div class="mt-6">
                <button class={`w-full rounded-lg px-4 py-2 text-sm font-medium transition-colors duration-200 ${
                  plan.popular
                    ? 'bg-indigo-600 text-white hover:bg-indigo-700'
                    : 'border border-gray-300 text-gray-700 hover:bg-gray-50'
                }`}>
                  {plan.name === currentPlan.name ? 'Current Plan' : 'Choose Plan'}
                </button>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Billing History -->
    <div class="mt-8 bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Billing History</h3>
        <p class="text-sm text-gray-500">View your past invoices and payments</p>
      </div>

      <div class="px-6 py-6">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Date
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Description
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Amount
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Status
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">Feb 15, 2024</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">Pro Plan - Monthly</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">$29.00</td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                    Paid
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <button class="text-indigo-600 hover:text-indigo-900">Download</button>
                </td>
              </tr>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">Jan 15, 2024</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">Pro Plan - Monthly</td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">$29.00</td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                    Paid
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <button class="text-indigo-600 hover:text-indigo-900">Download</button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>
