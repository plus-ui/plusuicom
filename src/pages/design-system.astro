--- 
import Layout from '@layouts/Layout.astro'

// Section imports
import Hero from '@components/sections/design-system/Hero.astro'
import Features from '@components/sections/Features.astro'
import Specifications from '@components/sections/Specifications.astro'
import Resources from '@components/sections/Resources.astro'
import FAQ from '@components/sections/FAQ.astro'
import Templates from '@components/sections/Templates.astro'
---

<Layout
  title="Plus UI Design System - High-Quality UI Components"
  description="Professional UI component library for Astro, React, Vue and more. Build beautiful, accessible interfaces faster with our comprehensive design system."
  keywords="UI library, component library, Astro components, React components, Vue components, design system, web development, frontend, UI kit, interface design"
  theme="light"
  headerTheme="light"
>
  <main>
    <!-- Hero Section -->
    <Hero />

    <!-- Features Section - Vertical Tabs -->
    <Features />

    <!-- Specifications Section -->
    <Specifications />


    <!-- Resources Section -->
    <Resources />

    <!-- FAQ Section -->
    <FAQ />

    <!-- Templates Section -->
    <Templates />
  </main>
</Layout>
