---
import Layout from '@layouts/Layout.astro'

// Section imports
import { HomeHero, Showcase, HomeFeatures, HomeSpecifications, Proof, Resources, HomeFAQ, Templates } from '@components/sections'
---

<Layout
  title="Plus UI Library - High-Quality UI Components"
  description="Professional UI component library for Astro, React, Vue and more. Build beautiful, accessible interfaces faster with our comprehensive design system."
  keywords="UI library, component library, Astro components, React components, Vue components, design system, web development, frontend, UI kit, interface design"
  theme="light"
  headerTheme="dark"
>
  <main>
    <!-- Hero Section - 2 Column Layout -->
    <HomeHero />

    <!-- Proof Section - Brand Logos -->
    <Proof />

    <!-- Showcase Section - Animated Tabs -->
    <Showcase />

    <!-- Features Section - Vertical Tabs -->
    <HomeFeatures />

    <!-- Specifications Section -->
    <HomeSpecifications />

    <!-- Resources Section -->
    <Resources />

    <!-- FAQ Section -->
    <HomeFAQ />

    <!-- Templates Section -->
    <Templates />
  </main>
</Layout>
